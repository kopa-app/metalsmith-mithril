{
  "name": "metalsmith-mithril",
  "version": "0.3.0",
  "description": "Metalsmith plugin that creates html out of mithril.js code.",
  "main": "index.js",
  "scripts": {
    "lint": "NODE_ENV=testing xo",
    "test": "_mocha index.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kopa-app/metalsmith-mithril.git"
  },
  "keywords": [
    "kopa",
    "metalsmith",
    "mithril"
  ],
  "author": "Ondrej Brinkel <info@kopa.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kopa-app/metalsmith-mithril/issues"
  },
  "homepage": "https://github.com/kopa-app/metalsmith-mithril#readme",
  "dependencies": {
    "debug": "^4.1.1",
    "es6-promise-series": "^0.2.0",
    "minimatch": "^3.0.4",
    "mithril-node-render": "^2.3.2"
  },
  "devDependencies": {
    "expect.js": "^0.3.1",
    "metalsmith": "^2.3.0",
    "mithril": "^1.1.6",
    "mocha": "^6.1.4",
    "xo": "^0.24.0"
  },
  "publishConfig": {
    "tag": "latest"
  },
  "xo": {
    "space": true,
    "envs": [
      "node"
    ],
    "ignores": [
      "node_modules"
    ],
    "globals": [
      "describe",
      "it",
      "before",
      "beforeEach",
      "afterEach"
    ],
    "rules": {
      "unicorn/filename-case": "off",
      "no-warning-comments": "off",
      "capitalized-comments": "off",
      "no-else-return": "off",
      "no-debugger": "off"
    }
  }
}
